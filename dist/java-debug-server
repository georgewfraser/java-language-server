#!/bin/bash

OS="unknown"
if which -s uname;then
  OS=$(uname |tr '[:upper:]' '[:lower:]')
fi
SCRIPTS_DIR=$(dirname $(readlink -f "${BASH_SOURCE[0]}"))
if [[ "${OS}" == 'darwin' ]]; then
  ${SCRIPTS_DIR}/debug_adapter_mac.sh
elif [[ "${OS}" == 'linux' ]]; then
  ${SCRIPTS_DIR}/debug_adapter_linux.sh
else
  ${SCRIPTS_DIR}/debug_adapter_windows.sh
fi
