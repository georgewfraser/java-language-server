#!/bin/bash

OS="unknown"
if which -s uname;then
  OS=$(uname |tr '[:upper:]' '[:lower:]')
fi
DIST_DIR=$(dirname $(readlink -f "${BASH_SOURCE[0]}"))
if [[ "${OS}" == 'darwin' ]]; then
  ${DIST_DIR}/debug_adapter_mac.sh $@
elif [[ "${OS}" == 'linux' ]]; then
  ${DIST_DIR}/debug_adapter_linux.sh $@
else
  ${DIST_DIR}/debug_adapter_windows.sh $@
fi
